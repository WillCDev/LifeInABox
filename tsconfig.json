{
  "include": ["./src"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    /* noEmit - Webpack build (emits) files, not tsc. */
    "noEmit": true,
    /* Additional Options */
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "ES2020"
  }
}
